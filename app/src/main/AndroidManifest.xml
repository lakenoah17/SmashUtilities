<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honorsmobileapps.noahshields.smashutilities">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smash_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/smash_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TournamentFeature.TournamentAccessActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainStartActivity" />
        <activity android:name=".CharacterDataFeature.CharacterDataSelectionActivity" />
        <activity android:name=".CharacterDataFeature.CharacterDataActivity" />
        <activity android:name=".StageStrikingFeature.ChooseStageListActivity" />
        <activity
            android:name=".StageStrikingFeature.CreateStageListActivity"
            android:noHistory="true" />
        <activity android:name=".StageStrikingFeature.StageStrikingActivity" />
        <activity android:name=".Notes.AccessNotesActivity" />
        <activity
            android:name=".Notes.CreateNoteActivity"
            android:noHistory="true" />
        <activity
            android:name=".Notes.NoteActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>