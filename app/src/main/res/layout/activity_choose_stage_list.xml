<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StageStrikingFeature.ChooseStageListActivity"
    android:orientation="vertical"
    android:background="@color/basebackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextFields"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="Choose a Stage List"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_stage_list"
        android:textAllCaps="false"
        style="@style/TextFields"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:id="@+id/Button_CreateStageListChoose"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".StageStrikingFeature.ChooseStageListActivity"
        android:id="@+id/RecyclerView_StageListSelection"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_gravity="center_horizontal">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>