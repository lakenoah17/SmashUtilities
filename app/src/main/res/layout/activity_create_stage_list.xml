<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StageStrikingFeature.CreateStageListActivity"
    android:background="@color/basebackground"
    android:orientation="vertical"
    android:id="@+id/LinearLayout_CreateStageListRootLayout"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextFields"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/create_stage_list"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Stage List"
        android:textAllCaps="false"
        style="@style/TextFields"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:id="@+id/Button_SaveStageList"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            android:layout_centerHorizontal="true"
            android:id="@+id/RecyclerView_StageListCreationSelection">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />
</LinearLayout>