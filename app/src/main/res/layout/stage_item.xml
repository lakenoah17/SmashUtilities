<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="184dp"
    android:layout_height="174dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView_StageItem"
    android:layout_margin="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:id="@+id/ImageView_StageImage" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:src="@drawable/stage_is_striked"
            android:id="@+id/ImageView_StageIsStriked"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextFields"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:id="@+id/TextView_StageName"
            android:layout_below="@id/ImageView_StageImage"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>